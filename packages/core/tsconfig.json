{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@core/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx", "src/**/*.json", "../../typings/color-namer/color-namer.d.ts"],
  "exclude": ["node_modules", "lib", "tsconfig.json"],
  "tsc-alias": {
    "verbose": true
  }
}
