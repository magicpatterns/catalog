{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx", "src/**/*.json", "**/*.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "tsconfig.json",
    ".storybook/**/*",
    "**/*.stories.tsx",
    ".babelrc.*",
    ".eslintrc.*",
    "README.md",
    "yarn.*",
    "yarn-error.*"
  ],
  "tsc-alias": {
    "verbose": true
  }
}
